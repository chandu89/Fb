<div class="min-h-screen flex items-center justify-center bg-gradient-to-r from-blue-500 to-indigo-600">
  <div class="relative bg-white p-8 rounded-lg shadow-xl w-full max-w-sm z-10">
    <!-- Header -->
    <h2 class="text-3xl font-semibold text-center text-gray-800 mb-6">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <!-- Email field -->
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-600 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
            class: "w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <!-- Password field -->
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-600 mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", 
            class: "w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <!-- Remember me checkbox -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center mb-4">
          <%= f.check_box :remember_me, class: "mr-2 text-indigo-600" %>
          <%= f.label :remember_me, class: "text-sm text-gray-600" %>
        </div>
      <% end %>

      <!-- Submit button -->
      <div class="text-center">
        <%= f.submit "Log in", 
            class: "w-full py-3 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-200" %>
      </div>
    <% end %>

    <!-- Links (forgot password, etc.) -->
    <div class="mt-4 text-center text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
