<div class="min-h-screen bg-gradient-to-r from-blue-200 via-purple-200 to-pink-200 py-12">
  <div class="max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-2xl">
    <h1 class="text-4xl font-bold text-gray-800 text-center mb-8">Post Details</h1>

    <div class="mb-6">
      <strong class="text-lg text-gray-800">Posted by:</strong>
      <p class="text-gray-600"><%= @post.user.email %></p>
    </div>

    <div class="mb-6">
      <strong class="text-lg text-gray-800">Content:</strong>
      <p class="text-gray-600"><%= @post.content %></p>
    </div>

    <% if @post.image.attached? %>
      <div class="mb-6">
        <strong class="text-lg text-gray-800">Image:</strong>
        <div class="mt-2">
          <%= image_tag @post.image, class: "rounded-xl shadow-lg max-w-full" %>
        </div>
      </div>
    <% end %>

    <% if @post.user == current_user %>
      <div class="mt-6 flex justify-between items-center">
        <%= link_to 'Edit', edit_post_path(@post), class: "text-blue-500 hover:underline" %>
        |
        <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:underline" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= link_to 'Back', posts_path, class: "py-3 px-8 bg-indigo-600 text-white font-semibold rounded-full hover:bg-indigo-700 transition duration-300" %>
    </div>
  </div>
</div>
