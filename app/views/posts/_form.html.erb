<%= form_with(model: post, local: true, html: { multipart: true }) do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded-lg mb-6">
      <h2 class="font-semibold"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul class="list-disc pl-5 mt-2">
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label :content, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_area :content, class: "w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-6">
    <%= form.label :image, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.file_field :image, class: "w-full text-gray-700 border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <% if post.image.attached? %>
    <div class="mb-6">
      <%= image_tag post.image, class: "rounded-xl shadow-lg max-w-full" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= form.submit "Save Post", class: "py-3 px-8 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
<% end %>
