<% content_for :title, "New Post" %>

<div class="min-h-screen bg-gradient-to-r from-blue-200 via-purple-200 to-pink-200 py-12">
  <div class="max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-xl">
    <h1 class="text-4xl font-bold text-gray-800 text-center mb-8">New Post</h1>

    <%= render "form", post: @post %>

    <div class="text-center mt-8">
      <%= link_to "Back to Posts", posts_path, class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
